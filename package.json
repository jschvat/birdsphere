{
  "name": "birdsphere-api",
  "version": "1.0.0",
  "description": "BirdSphere API - Comprehensive marketplace for bird and exotic pet enthusiasts",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js --watch src --ignore uploads/",
    "test": "jest --testPathPattern=test/",
    "test:watch": "jest --watch --testPathPattern=test/",
    "test:coverage": "jest --coverage --testPathPattern=test/",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "validate": "npm run lint && npm run test",
    "db:seed": "node scripts/seed-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "docs:build": "swagger-jsdoc -d docs/swagger.json src/routes/*.js",
    "logs:clean": "rm -rf logs/*.log",
    "cache:clear": "node scripts/clear-cache.js"
  },
  "keywords": [
    "api",
    "rest",
    "birds",
    "exotic-pets",
    "marketplace",
    "breeding",
    "social",
    "listings",
    "chat",
    "location-based",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "socket.io"
  ],
  "author": "BirdSphere Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/birdsphere/api.git"
  },
  "homepage": "https://github.com/birdsphere/api#readme",
  "bugs": {
    "url": "https://github.com/birdsphere/api/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
