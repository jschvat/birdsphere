# Server Configuration
PORT=3010
NODE_ENV=development

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5435
DB_NAME=birdsphere
DB_USER=birdsphere_user
DB_PASSWORD=your_db_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB (for hybrid chat architecture)
MONGODB_URI=mongodb://birdsphere_admin:mongodb_password_123@localhost:27017/birdsphere_chat?authSource=admin
USE_MONGODB_CHAT=false
CHAT_FALLBACK_ENABLED=true

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Session Secret
SESSION_SECRET=your_session_secret_change_this_in_production

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
# Post media upload limits (50MB for posts to support 3D models and documents)
MAX_POST_FILE_SIZE=52428800

# Future OAuth (for later implementation)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=